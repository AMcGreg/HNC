float angle = 0.0;
float offset = 60;
float scalar = 4;
float speed = 0.05;

void setup(){

  size (1000, 1000);
  background (255);
  frameRate(120);
}

void draw(){
  

float x = offset + cos(angle) * scalar;
  float y = offset + sin(angle) * scalar;
  


fill (0, 255, random(0, 255),10);
   rotate(0.1);ellipse(x+500, y+500, x+5, y+5);
angle += speed;
scalar += speed; 

 }
